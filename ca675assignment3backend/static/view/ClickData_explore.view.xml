<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	controllerName="com.dcu.ca675.ui.view.ClickData_explore" xmlns:l="sap.ui.layout"
	xmlns:sapm="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">

			<sapm:Panel class="searchBar">
				<sapm:headerToolbar>
					<sapm:Toolbar>
						<sapm:Label text="Search" width="50px"/>
						<sapm:ToolbarSpacer/>

						<sapm:SearchField placeholder="Enter title of wiki page to search for here" search=".searchClickData"/>
					</sapm:Toolbar>
				</sapm:headerToolbar>
				<sapm:Text class="searchedQuery" text="{/query}" textAlign="Center"/>
				<sapm:FlexBox class="queryresults"
					alignItems="Start"
					justifyContent="Center">

					<sapm:Table 
						id="fromTable"
						class="queryResultsTable frompages"
						inset="false"
						mode="SingleSelectMaster"
						items="{
							path: '/from'
						}" 
						selectionChange=".fromListItemSelected">
						<sapm:headerToolbar>
							<sapm:Toolbar>
								<sapm:Title text="From" level="H2"/>
							</sapm:Toolbar>
						</sapm:headerToolbar>
		
						<sapm:columns>
							<sapm:Column class="toparticles" width="74%">
								<sapm:Text text="Top Articles" />
							</sapm:Column>
		
							<sapm:Column class="articlecount"
								minScreenWidth="Tablet"
								demandPopin="true">
								<sapm:Text text="Count" />
							</sapm:Column>
							<sapm:Column class="articlepercentage"
								minScreenWidth="Tablet"
								demandPopin="true"
								hAlign="Right">
							<sapm:Text text="%" />
							</sapm:Column>
						</sapm:columns>	
	
						<sapm:items>
							<sapm:ColumnListItem>
								<sapm:cells>
									<sapm:Text
										text="{article}" />
									<sapm:Text
										text="{count}" />
									<sapm:Text
										text="{percentage}" />
								</sapm:cells>
							</sapm:ColumnListItem>
						</sapm:items>
					</sapm:Table>

					<sapm:Table
						id="toTable" 
						class="queryResultsTable topages"
						inset="false"
						mode="SingleSelectMaster"
						items="{
						path: '/to'
						}"
						selectionChange=".toListItemSelected">
						<sapm:headerToolbar>
							<sapm:Toolbar>
								<sapm:Title text="To" level="H2"/>
							</sapm:Toolbar>
						</sapm:headerToolbar>
		
						<sapm:columns>
							<sapm:Column
								 class="toparticles" width="74%">
								<sapm:Text text="Top Articles" />
							</sapm:Column>
	
							<sapm:Column class="articlecount"
								minScreenWidth="Tablet"
								demandPopin="true">
								<sapm:Text text="Count" />
							</sapm:Column>
							<sapm:Column class="articlepercentage"
								minScreenWidth="Tablet"
								demandPopin="true"
								hAlign="Right">
								<sapm:Text text="%" />
							</sapm:Column>
						</sapm:columns>	
	
						<sapm:items>
							<sapm:ColumnListItem>
								<sapm:cells>
									<sapm:Text
										text="{article}"
										press=".searchClickData" />
									<sapm:Text
										text="{count}" />
									<sapm:Text
										text="{percentage}" />
								</sapm:cells>
							</sapm:ColumnListItem>
						</sapm:items>
					</sapm:Table>
			
				</sapm:FlexBox>

			
			</sapm:Panel>
			<sapm:Panel class="clickdatachart">
					<html:p id="chart" class="clickdatachart-p"/>
			</sapm:Panel>
</mvc:View>
